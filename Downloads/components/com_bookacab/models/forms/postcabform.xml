<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

              <field name="id" type="text" default="0" label="COM_BOOKACAB_FORM_LBL_POSTCAB_ID"
            readonly="true" class="readonly"
            description="JGLOBAL_FIELD_ID_DESC" />

       <field name="modified_by" type="modifiedby" default=""
            label="COM_BOOKACAB_FORM_LBL_POSTCAB_MODIFIED_BY"
            description="COM_BOOKACAB_FORM_DESC_POSTCAB_MODIFIED_BY"  />

       <field name="name" type="text" size="40" class="inputbox"
            label="COM_BOOKACAB_FORM_LBL_POSTCAB_NAME"
            description="COM_BOOKACAB_FORM_DESC_POSTCAB_NAME"
        filter="safehtml" />

       <field name="mobile" type="text" size="40" class="inputbox"
            label="COM_BOOKACAB_FORM_LBL_POSTCAB_MOBILE"
            description="COM_BOOKACAB_FORM_DESC_POSTCAB_MOBILE"
        filter="safehtml" />

       <field name="email" type="text" size="40" class="inputbox"
            label="COM_BOOKACAB_FORM_LBL_POSTCAB_EMAIL"
            description="COM_BOOKACAB_FORM_DESC_POSTCAB_EMAIL"
        filter="safehtml" />

       <field name="cab_type" type="text" size="40" class="inputbox"
            label="COM_BOOKACAB_FORM_LBL_POSTCAB_CAB_TYPE"
            description="COM_BOOKACAB_FORM_DESC_POSTCAB_CAB_TYPE"
        filter="safehtml" />

       <field name="from" type="text" size="40" class="inputbox"

            label="COM_BOOKACAB_FORM_LBL_POSTCAB_FROM"
            description="COM_BOOKACAB_FORM_DESC_POSTCAB_FROM"
        filter="safehtml" />

       <field name="to" type="text" size="40" class="inputbox"

            label="COM_BOOKACAB_FORM_LBL_POSTCAB_TO"
            description="COM_BOOKACAB_FORM_DESC_POSTCAB_TO"
        filter="safehtml" />

       <field name="date" type="calendar" class="inputbox"



            label="COM_BOOKACAB_FORM_LBL_POSTCAB_DATE"
            description="COM_BOOKACAB_FORM_DESC_POSTCAB_DATE"
        filter="safehtml" />

       <field name="time" type="text" size="40" class="inputbox"

            label="COM_BOOKACAB_FORM_LBL_POSTCAB_TIME"
            description="COM_BOOKACAB_FORM_DESC_POSTCAB_TIME"



        filter="safehtml" />

       <field name="pickuppoints" type="text" size="40" class="inputbox"

            label="COM_BOOKACAB_FORM_LBL_POSTCAB_PICKUPPOINTS"
            description="COM_BOOKACAB_FORM_DESC_POSTCAB_PICKUPPOINTS"

        filter="safehtml" />

       <field name="rate_perkm" type="text" size="40" class="inputbox"

            label="COM_BOOKACAB_FORM_LBL_POSTCAB_RATE_PERKM"
            description="COM_BOOKACAB_FORM_DESC_POSTCAB_RATE_PERKM"

        filter="safehtml" />

       <field name="no_of_seats" type="text" size="40" class="inputbox"

            label="COM_BOOKACAB_FORM_LBL_POSTCAB_NO_OF_SEATS"
            description="COM_BOOKACAB_FORM_DESC_POSTCAB_NO_OF_SEATS"

        filter="safehtml" />
        <field
			name="image_file"
			type="file"
			label="COM_USERS_PROFILE_IMAGE_LABEL"
			description="COM_USERS_PROFILE_IMAGE_DESC"
		/>


        <field name="smoke" type="radio" default="00:00:00"
			description="Smoke Allowed"
			label="Smoke Allowed">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</field>

		<field name="pet" type="radio" default="00:00:00"
			description="Pet Allowed"
			label="Pet Allowed">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</field>


		<field name="music" type="radio" default="00:00:00"
			description="Music Allowed"
			label="Music Allowed">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</field>

		<field name="verified" type="radio" default="00:00:00"
			description="verified"
			label="verified">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</field>






         <field
        name="state"
        type="list"
        label="JSTATUS"
        description="JFIELD_PUBLISHED_DESC"
        class="inputbox"
        size="1"
        default="1">
        <option value="1">JPUBLISHED</option>
        <option value="0">JUNPUBLISHED</option>
        <option value="2">JARCHIVED</option>
        <option value="-2">JTRASHED</option>
    </field>

 </fieldset>

 <fieldset
       name="accesscontrol">
      <field name="asset_id" type="hidden" filter="unset" />
      <field name="rules"
           type="rules"
           label="JFIELD_RULES_LABEL"
           translate_label="false"
           filter="rules"
           validate="rules"
           class="inputbox"
           component="com_bookacab"
           section="postcab"
       />

	</fieldset>

</form>
